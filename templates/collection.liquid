{% paginate collection.products by 16 %}

<div id="featured-products" class="sixteen columns">
	
	<h3 class="featured-products-title">{{ collection.title }}</h3>
	
	{% if settings.product_tags %}
	    {% if collection.all_tags and collection.all_tags.size != 0 %}
        <ul class="product-tag">
	       <li class="product-tag-title">Product Tags:</li>
	       {% for tag in collection.all_tags %}
	       <li class="product-tag-item">{{ tag | link_to_tag: tag }}</li>
           {% endfor %}
	    </ul>
	    {% endif %}
	{% endif %}
	
	{% if collection.description %}
	<div id="catalog-description">
		<p>{{ collection.description }}</p>
	</div>
	{% endif %}
	
	{% if collection.products.size == 0 %}
		<strong>No products found in this collection.</strong>
		{% else %}		
		<div id="collection_frontpage">		
  		{% for product in collection.products %}
  		  <div class="product_frontpage">
    		  <a href="{{ product.url | within: collection }}">
    		    <span class="product-image-wrapper"><img class="product-image cy" src="{{ product.images.first | product_img_url: 'medium' }}" alt="{{ product.title | escape }}" /></span>
    		    <span class="product-name">{{ product.title }}</span>
            <span class="featured-price">{% if product.compare_at_price_max > product.price %}<em>was {{ product.compare_at_price_max | money }}</em>{% endif %}<strong>{{ product.price  | money }}</strong></span><br /><span class="small button details">DETAILS</span>
    		  </a>
  		  </div>		
  		{% endfor %}
		</div>	
		<script type="text/javascript" charset="utf-8">
    $(function(){

       var $container = $('#collection_frontpage');


       $container.imagesLoaded( function(){
         $container.masonry({
           itemSelector : '.product_frontpage',
           columnWidth: 230
         });
       });

     });

    </script>
			{% if paginate.pages > 1 %}
  		<div id="pagination">
  			<ul>
  				<li>{{ paginate | default_pagination }}</li>
  			</ul>
  		</div>
			{% endif %}

	{% endif %}

</div>
{% endpaginate %}