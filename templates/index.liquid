<div class="sixteen columns slider_frontpage">
  <img src="http://lorempixel.com/960/360/food" width="960" height="360" alt="" />
</div><!-- #slider_frontpage -->

<div class="sixteen columns clearfix right_col_frontpage">
  <div id="message_bar_frontpage">
    {{ pages.right-col-frontpage-message-box.content }}
  </div><!-- #message_bar_frontpage -->
  <div id="collection_frontpage">
    {% for link in linklists.front-page.links %}
      <div class="product_frontpage">
      {% if link.type == 'product_link' %}
      <img src="{{ link.object.featured_image | product_img_url: 'large' }}" >
      {% elsif link.type == 'page_link' %}
      <span class="front_page_quote">{{ link.object.content }}</span>
      {% endif %}
      </div>
    {% endfor %}
  </div><!-- #collection_frontpage -->
</div><!-- #right_col_frontpage -->
  <script type="text/javascript" charset="utf-8">
  $(function(){

     var $container = $('#collection_frontpage');


     $container.imagesLoaded( function(){
       $container.masonry({
         itemSelector : '.product_frontpage',
         columnWidth: 230
       });
     });

   });

  </script>
